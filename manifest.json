{
  "manifest_version": 2,
  "name": "AWS SSO Containers",
  "version": "1.0",
  "description": "Open AWS SSO in container tabs",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5f66bb4b-da07-4eb0-bb24-3c50a05c63ba}"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "contextualIdentities",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.awsapps.com/start/*",
    "https://*.amazonaws.com/federation/console?*"
  ],
  "background": {
    "scripts": [
      "dist/index.js"
    ]
  }
}